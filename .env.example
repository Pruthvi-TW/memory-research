# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive data

# =============================================================================
# AI/LLM API CONFIGURATION - REQUIRED
# =============================================================================

# Anthropic API Configuration - REQUIRED for main chatbot functionality
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_actual_anthropic_api_key_here

# OpenAI API Configuration - OPTIONAL (for mem0 if you want to use it)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION - OPTIONAL
# =============================================================================

# Neo4j Graph Database Configuration
# Install Neo4j locally or use Neo4j Aura cloud service
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# MEMORY LAYER CONFIGURATION - OPTIONAL
# =============================================================================

# Mem0 API Configuration (for enhanced memory management)
# Get your API key from: https://mem0.ai/
# MEM0_API_KEY=your_mem0_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Path to your lending context documents
LENDING_CONTEXT_PATH=./Lending

# Context retrieval settings
MAX_CONTEXT_ITEMS=8
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_TASKS=5

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration (for frontend access)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (generate a secure random string)
# JWT_SECRET=your_jwt_secret_here

# Session secret (generate a secure random string)
# SESSION_SECRET=your_session_secret_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_NEO4J=true
ENABLE_MEM0=true
ENABLE_GITHUB_PROCESSING=true
ENABLE_URL_PROCESSING=true
ENABLE_FILE_UPLOAD=true

# =============================================================================
# EXTERNAL SERVICES (if needed)
# =============================================================================

# GitHub API (for repository processing)
# GITHUB_TOKEN=your_github_personal_access_token

# Email service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
# DEV_MODE=true
# MOCK_EXTERNAL_APIS=false
# ENABLE_DEBUG_LOGGING=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production-specific settings (uncomment for production)
# ENVIRONMENT=production
# SECURE_COOKIES=true
# FORCE_HTTPS=true
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=60